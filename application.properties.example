###########################################
# DATABASE CONFIGURATION (MYSQL)
###########################################

spring.datasource.url=jdbc:mysql://<HOST>:3306/knowyourmood
spring.datasource.username=<DB_USERNAME>
spring.datasource.password=<DB_PASSWORD>
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

###########################################
# JPA / HIBERNATE CONFIG
###########################################

spring.jpa.hibernate.ddl-auto=update
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect
spring.jpa.show-sql=false

###########################################
# JWT CONFIGURATION
###########################################

# ‚ùó Generate a random key for production (at least 64 chars)
app.jwt.secret=<YOUR_RANDOM_SECRET_KEY>
app.jwt.expiration=86400000   # 24 hours in ms

###########################################
# SERVER CONFIG
###########################################

# Backend runs at port 8080
server.port=8080

###########################################
# CORS CONFIG (allowed frontend URL)
###########################################

# Example: https://knowyourmood.vercel.app
app.cors.allowed-origins=<FRONTEND_URL>
